<%- include("../partials/header") %>

<div class="container">
	
	<div class="row">
		<h1 style="text-align:center;">Edit <%=camp.name%></h1>
		<div style="width:30%; margin: 25px auto;">
			<form action="/camps/<%=camp._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="camp[name]" placeholder="name" value="<%=camp.name%>" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="camp[image]" placeholder="image" value="<%=camp.image%>" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="camp[desc]" placeholder="description" value="<%=camp.desc%>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block" type="submit">Add</button>
				</div>
			</form>
			<a href="/camps">Back to Camps</a>
		</div>
		
	</div>
	

</div>

<%- include("../partials/footer") %>