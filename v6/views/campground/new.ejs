<%- include("../partials/header") %>

<div class="container">
	
	<div class="row">
		<h1 style="text-align:center;">Add New Camp Grounds</h1>
		<div style="width:30%; margin: 25px auto;">
			<form action="/camps" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="name" placeholder="name" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="image" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="desc" placeholder="description">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block" type="submit">Add</button>
				</div>
			</form>
			<a href="/camps">Back to Camps</a>
		</div>
		
	</div>
	

</div>

<%- include("../partials/footer") %>