<!DOCTYPE>
<html>
	<head>
		<title>YelpCamp v6</title>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
		<link rel="stylesheet" href="stylesheet/app.css">
		
	</head>
	<body>
		
		<!--- Navbar STARTS here --->
		<nav class="navbar navbar-default">
			<div class="container-fluid">
				<div class="navbar-header">
					<a class="navbar-brand" href="/">YelpCamp</a>
				</div>
				<div class="navbar-collapse collapse" id="navbarNav">
					<ul class="nav navbar-nav navbar-right">
						<% if(!currentUser){ %>
							<li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
							<li class="nav-item"><a class="nav-link" href="/register">SignUp</a></li>
						<% }else { %>
							<li class="nav-item"><a class="nav-link" href="#">Welcome, <%=currentUser.username%></a></li>
							<li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
						<% } %>
					</ul>
				</div>
			</div>
		</nav>
		<!--- Navbar ENDS here --->
		
		<!--- Flash message section STARTS here --->
		<%if(error && error.length > 0){%>
		<div class="container">	
			<div class="alert alert-danger" role="alert">
					<%=error%>
			</div>	
		</div>
		<%}%>
		<%if(success && success.length > 0){%>
		<div class="container">
			<div class="alert alert-info" role="alert">
					<%=success%>
			</div>
		</div>
		<%}%>
		<!--- Flash message section ENDS here --->